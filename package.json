{
  "name": "sticky-notes",
  "version": "1.0.0",
  "description": "Clone do Notas Autoadesivas do Windows 11",
  "author": "FelipeGazapina",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "build:store": "electron-builder --win appx"
  },
  "build": {
    "appId": "com.felipegazapina.sticky-notes",
    "productName": "Sticky Notes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sticky Notes"
    },
    "portable": {
      "artifactName": "${productName} Portable ${version}.${ext}"
    }
  },
  "dependencies": {
    "electron-store": "^11.0.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  }
}
